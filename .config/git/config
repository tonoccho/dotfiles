  i-have-done-nothing = reset --hard
  cancel-the-latest-commit-softly = reset --soft HEAD^
  cancel-the-latest-commit-hardly = reset --hard HEAD^
  start-work-on-a-branch = "!f(){ git checkout -b $1;};f"
  
